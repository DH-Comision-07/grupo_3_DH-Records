<%- include('../partials/head-2.ejs') %>

<body>

    <%- include('../partials/header.ejs') %>
    
    <main class="main">
        <h2 class="titulo_principal"> Product Detail </h2>
        <section class="producto">
            <div class="vinilo__img1">
                <img src="/imagenes/Vinilo1.png" alt="Vinilo1">
            </div>
            <div class="vinilo">
                <h4 class="titulo__vinilo"> <%= productId.titulo %> </h4>
                    <p>Group: <%= productId.autor %> </p>
                    <p>Year: <%=productId.aÃ±o %> </p>
                    <p>Gender: <%=productId.categoria %> </p>
                    <p>Style: <%= productId.estilo %></p>
                    <p>Qualification: <i class="fa-solid fa-star"></i><i class="fa-solid fa-star"></i><i class="fa-solid fa-star"></i><i class="fa-solid fa-star"></i> </p>     
