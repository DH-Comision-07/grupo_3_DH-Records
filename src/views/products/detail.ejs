                <h4 class="titulo__precio">Price</h4>
                <p class="num__precio"><%= productId.precioMostrador %></p>
                <p class="agregar__carrito">
                <div class="centrar-texto">
                    <a href="/products/cart">Add to cart <i class="fa-solid fa-cart-shopping"></i></a>
                </div>
                </p> 
                <div class="centrar-texto">
                    <a href="/products/edit/<%= productId.id %>">Edit Product</a>
                </div>
                <form method="POST" action="/products/<%= productId.id %>?_method=DELETE">
                    <button type="submit">Delete product</button>
                </form>
                </div> 
        </section>

        <section class="sugerencias">
            <div class="sugerencias__titulo">
